            @Html.DisplayFor(modelItem => item.TechnicianId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.TechnicianEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfOperations)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new {id = item.TechnicianId}) |
            @Html.ActionLink("Details", "Details", new {id = item.TechnicianId}) |
            @Html.ActionLink("Delete", "Delete", new {id = item.TechnicianId}) |*@
