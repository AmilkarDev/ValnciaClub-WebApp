<table class="table">
    <tr class="info">
        <th>
            @Html.DisplayNameFor(model => model.TechnicianId)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.FirstName   )
        </th>

        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>

